-module(bank_server).

-export([start/0, stop/0]).

start() ->
    mnesia:start(),
    spawn_link(fun() -> server(3010) end).

stop() ->
    mnesia:stop(),
    tcp_server:stop(3010).

server(Port) ->
    tcp_server:start_raw_server(Port, 
                                fun(Socket) ->
                                        input_handler(Socket)
                                end,
                                15, 
                                4).
              
                       
