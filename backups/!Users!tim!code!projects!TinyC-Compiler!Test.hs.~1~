import Test.HUnit
import TinyC

numberTest1 :: Test  
numberTest1 =   
  TestCase (assertEqual "Expecting Number 1" "Term (Number 1)" (readExpr "1")) 

numberTest2 :: Test  
numberTest2 =   
  TestCase (assertEqual "Expecting Number 1239435" "Term (Number 1239435)" (readExpr "1239435")) 

idTest1 :: Test
idTest1 =
    TestCase (assertEqual "Expecting Identifier t" "Term (Identifier 't')" (readExpr "t"))

idTest2 :: Test
idTest2 =
    TestCase (assertEqual "Expecting Identifier t" "Term (Identifier '#')" (readExpr "#"))

main :: IO Counts  
main =   
    runTestTT $ TestList [numberTest1, numberTest2, idTest1, idTest2] 
