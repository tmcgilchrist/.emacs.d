require 'spec_helper'

describe Link do
  it 'should save given valid attributes' do
    Link.create! :original_url => 'http://www.google.com'
  end

  it 'should require an original url' do
    no_url = Link.new
    no_url.should_not be_valid
  end

  it 'should not allow duplicate original urls' do

    Link.create! :original_url => "http://www.google.com"
    duplicate = Link.new :original_url => "http://www.google.com"
    duplicate.should_not be_valid
  end

  it 'should map a short url to an original url'
  it 'should produce a unique  short url'
end
