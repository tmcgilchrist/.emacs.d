#!/usr/bin/env python
import ply.lex as lex
import sys

class Lexer:

    reserved = {
        'boolean':'BOOLEAN',
        'break':'BREAK'
        }

    tokens = [
        'PLUS',
        'MINUS',
        'TIMES',
        'DIVIDE',
        'LPAREN',
        'RPAREN',
        'BOOLEANLITERAL',
        'INTLITERAL',
        'FLOATLITERAL'
        ] + reserved.values()

    t_PLUS = r'\+'
    t_MINUS = r'-'
    t_TIMES = r'\*'
    t_DIVIDE = r'/'
    t_LPAREN = r'\('
    t_RPAREN = r'\)'

    t_ignore = ' \t'

    def t_INTLITERAL(self, t):
        r'\d+[^\.]'
        try:
            t.value = int(t.value)
        except ValueError:
            print "Line %d: Integer %s is too large!" % (t.lineno,t.value)
            t.value = 0
        return t
            
    def t_FLOATLITERAL(self, t):
        r'\d*\.\d*'
        try:
            t.value = float(t.value)
        except ValueError:
            print "Line %d: Float %s is too large!" % (t.lineno, t.value)
            t.value = 0
        return t

    def t_BOOLEANLITERAL(self, t):
        r'[true|false]'
        try:
            t.value = (t.value)
        except ValueError:
            print "Boolean value incorrect", t.value
            t.value = false
        return t

    def t_newline(self, t):
        r'\n+'
        t.lexer.lineno += len(t.value)

    def t_error(self, t):
        print "Illegal character '%s'" % t.value[0]
        t.lexer.skip(1)

    # Build the lexer
    def build(self, **kwargs):
        self.lexer = lex.lex(object=self, **kwargs)
	
    def next(self):
        return self.lexer.token()

    def setup(self, data):
        self.lexer.input(data)
