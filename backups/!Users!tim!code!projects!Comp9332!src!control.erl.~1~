-module(control).
-author('Tim McGilchrist').
-compile(export_all).

start_nodes(0) -> [];
start_nodes(N) ->
    Pid = start(),
    [Pid| start_nodes(N-1)].

start() ->
    spawn_link(fun() -> loop([]) end).

rpc(Pid, Request) ->
    Pid ! {self(), Request},
    receive
        {Pid, Response} ->
              Response
    end.
